---
import Layout from '../layouts/Page.astro';
import Container from '../components/Container.astro';
import BlogPostsList from '../components/BlogPostsList.astro';

const posts = (await Astro.glob('./blog/*.{md,mdx}')).sort(
	(a, b) =>
		new Date(b.frontmatter.publishedAt).valueOf() -
		new Date(a.frontmatter.publishedAt).valueOf()
);
---

<style>
	.home-hero-text__container {
		padding: 5vh 0;
	}
	h1 {
		text-align: center;
	}
</style>

<Layout>
	<Container>
		<div class="home-hero-text__container">
			<h1 class="fade-in">Interactions.Rest Blog</h1>
		</div>
		<BlogPostsList posts={posts} />
	</Container>
</Layout>
